<h1>New Event</h1>

<%= form_for :event, url: events_path do |fr| %>
	<% if @data.errors.any? %>
	<div id="error_explanation">
		<h3>The following <%= pluralize(@data.errors.count, "error") %> prohibited this event from being saved: </h3>
		<ul>
			<% @data.errors.full_messages.each do |i| %>
			<li><%= i %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<p>
		<%= fr.label :title %>
		<%= fr.text_field :title %>
	</p>

	<p>
		<%= fr.label :time %>
		<%= fr.text_field :time %>
	</p>

	<p>
		<%= fr.label :place %>
		<%= fr.text_field :place %>
	</p>

	<p>
		<%= fr.submit %>
	</p>
<% end %>

<br><br><br><br>
<%= link_to 'All events', events_path %>